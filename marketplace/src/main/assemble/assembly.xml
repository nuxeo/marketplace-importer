<project name="importer-assembly" default="build" xmlns:nx="urn:nuxeo-build" xmlns:artifact="urn:nuxeo-artifact">
  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml" uri="urn:nuxeo-artifact" />

  <target name="init" unless="init.done">
    <property name="outdir" value="${maven.project.build.directory}" />
    <antcall target="expand" />
    <property name="init.done" value="true" />
  </target>

  <target name="expand">
    <!-- Include your artifacts in the graph adding your groupId to groupPrefixes -->
    <artifact:nuxeo-expand includeTestScope="true" groupPrefixes="org.nuxeo" />
    <!-- For Nuxeo IDE being able to use that distribution as a SDK -->
    <artifact:print output="${outdir}/artifacts-importer.properties" mode="sdk" />
    <artifact:print output="${outdir}/test-artifacts-importer.properties" mode="sdk" scopes="test" />
    <!-- Prints the graph for debugging purpose -->
    <artifact:print output="${outdir}/dependency-tree.log" />
  </target>

  <target name="build" depends="init" description="Build Nuxeo importer Marketplace package">
    <tstamp />
    <delete failonerror="false" dir="${outdir}/ear" />
    <mkdir dir="${outdir}/ear" />
    <delete failonerror="false" dir="${outdir}/marketplace" />
    <mkdir dir="${outdir}/marketplace" />
    <copy todir="${outdir}/marketplace">
      <fileset dir="src/main/resources" />
      <filterset>
        <filter token="VERSION" value="${marketplace.importer.version}" />
        <filter token="DISTRIB_VERSION" value="${nuxeo.distribution.version}" />
      </filterset>
    </copy>
    <copy file="${outdir}/artifacts-importer.properties" todir="${outdir}/marketplace/install" />
    <copy file="${outdir}/test-artifacts-importer.properties" todir="${outdir}/marketplace/install" />

    <!-- Base distribution EAR -->
    <copy todir="${outdir}">
      <artifact:file key="org.nuxeo.ecm.distribution:nuxeo-distribution-cap::zip" />
    </copy>

    <!-- Nuxeo bundles -->
    <copy todir="${outdir}/ear/bundles" overwrite="true">
      <artifact:set>
        <includes>
          <artifact groupId="org.nuxeo*" />
        </includes>
        <excludes>
          <artifact groupId="org.nuxeo.lib*" />
          <artifact scope="test" />
          <artifact scope="provided" />
          <artifact type="pom" />
        </excludes>
      </artifact:set>
    </copy>
    <!-- Third-party libraries -->
    <copy todir="${outdir}/ear/lib" overwrite="true">
      <artifact:set>
        <includes>
          <artifact groupId="!org.nuxeo*" scope="!test" />
          <artifact groupId="org.nuxeo.lib*" scope="!test" />
        </includes>
      </artifact:set>
    </copy>
    <nx:rmdups dir="${outdir}/ear/lib" />
    <!-- Temporary ZIP Nuxeo EAR to compare with base distribution EAR -->
    <zip destfile="${outdir}/ear-${marketplace.importer.version}.zip" basedir="${outdir}/ear" />

    <!-- Your MP only needs to include files not already provided by the base distribution -->
    <nx:zipdiff file1="${outdir}/ear-${marketplace.importer.version}.zip"
                file2="${outdir}/nuxeo-distribution-cap-${nuxeo.distribution.version}.zip"
                includesfile="${outdir}/includes"
                excludesfile="${outdir}/excludesfile"
                ignoreContentPattern=".*\.jar"
                patternsetid="importer.versus.cap">
    </nx:zipdiff>
    <unzip src="${outdir}/ear-${marketplace.importer.version}.zip" dest="${outdir}/marketplace/install">
      <patternset refid="importer.versus.cap" />
    </unzip>

    <zip destfile="${outdir}/${maven.project.artifactId}-${marketplace.importer.version}.zip"
         basedir="${outdir}/marketplace" />
    <artifact:attach file="${outdir}/${maven.project.artifactId}-${marketplace.importer.version}.zip" type="zip" />
  </target>

</project>
